---
// @ts-ignore
import { Icon } from "astro-icon";

const features = [
	{
		title: "Astro",
		description:
			"Astro is the all-in-one web framework designed for speed. Pull your content from anywhere and deploy everywhere, all powered by your favorite UI components and libraries.",
		icon: "bx:bxs-briefcase",
		url: "https://astro.build/",
	},
	{
		title: "Alpine",
		description:
			"Alpine is a rugged, minimal tool for composing behavior directly in your markup. Think of it like jQuery for the modern web. Plop in a script tag and get going.",
		icon: "bx:bxs-window-alt",
		url: "https://alpinejs.dev/",
	},
	{
		title: "Tailwind",
		description: "A utility-first CSS framework packed with classes that can be composed to build any design, directly in your markup.",
		icon: "bx:bxs-data",
		url: "https://tailwindcss.com/",
	},
	{
		title: "Localization",
		description: "An astro integration of i18next + some utility components to help you translate your astro websites!",
		icon: "bx:bxs-bot",
		url: "https://github.com/yassinedoghri/astro-i18next",
	},
	{
		title: "Ligh/Dark Mode",
		description: "Light/Dark mode based on tailwind classes",
		icon: "bx:bxs-file-find",
		url: "https://tailwindcss.com/docs/dark-mode",
	},
	{
		title: "Giscus",
		description: "A comments system powered by GitHub Discussions. Let visitors leave comments and reactions on your website via GitHub!",
		icon: "bx:bxs-user",
		url: "https://giscus.app/",
	},
	{
		title: "Decap CMS",
		description: "Open source content management for your Git workflow",
		icon: "bx:bxs-user",
		url: "https://decapcms.org/",
	},
	{
		title: "RSS feed",
		description: "RSS feed generato da @astrojs/rss",
		icon: "bx:bxs-user",
		url: "/rss.xml",
	},
	{
		title: "Article generator (soon)",
		description: "Use AI to generate your articles posts",
		icon: "bx:bxs-user",
		url: "#",
	},
];

const title = "Features";
const subtitle = "All the tools you need";
const description =
	"Astro is a high-performance static site builder that seamlessly integrates with Tailwind CSS and Alpine.js. It allows you to build websites with ease and speed, without sacrificing on performance.";
---

<section id="features">
	<div class="relative mx-auto max-w-5xl px-6 lg:px-8 mt-20">
		<div class="mx-auto max-w-2xl lg:text-center">
			<!-- <h2 class="text-base font-semibold leading-7 text-black dark:text-white">{title}</h2> -->
			<p class="mt-2 text-3xl font-bold tracking-tight text-black dark:text-white sm:text-4xl">{subtitle}</p>
			<p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100">
				{description}
			</p>
		</div>
		<div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
			<dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
				{
					features.map((item) => (
						<div class="flex flex-col">
							<dt class="flex items-center gap-x-3 text-lg font-semibold leading-7 text-black dark:text-white">
								<div class="h-5 w-5 flex-none text-black dark:text-white">
									<Icon name={item.icon} />
								</div>
								{item.title}
							</dt>
							<dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-900 dark:text-gray-100">
								<p class="flex-auto">{item.description}</p>
							</dd>
						</div>
					))
				}
			</dl>
		</div>
	</div>
</section>
