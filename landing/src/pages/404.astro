---
import Layout from "@layouts/Layout.astro";
---

<Layout title="404" lang="en">
	<section class="flex items-center h-full p-16">
		<div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
			<div class="max-w-md text-center">
				<h2 class="mb-8 font-bold text-9xl">
					<span class="sr-only dark:text-white">Error</span>
					<span class="text-primary dark:text-white">404</span>
				</h2>
				<p class="text-3xl font-semibold md:text-3xl dark:text-white">Sorry, we couldn't find this page.</p>
				<p class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">But dont worry, you can find plenty of other things on our homepage.</p>
				<a rel="noopener noreferrer" href="/" class="btn ml-4 dark:text-white">Back to homepage</a>
			</div>
		</div>
	</section>
</Layout>
